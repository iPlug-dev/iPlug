{
        "name": "iPlug BETA",
        "short_name": "iPlug",
        "author": "CookieMichal & L0laapk3",
        "version": "0.2.1.0",
        "manifest_version": 2,
        "description": "A free addon for http://plug.dj/ that allows autowoot, autojoin and many other things!",
        "icons": {
                "256": "images/Chrome/icon256.png"
        },
        "permissions": [
                "*://*.plug.dj/*",
                "storage",
                "notifications",
                "contextMenus"
        ],
        "optional_permissions": [
                "http://*/*",
                "https://*/*"
        ],
        "externally_connectable": {
                "matches": [
                        "*://plug.dj/*"
                ], "exclude_matches": [
                        "*://plug.dj/communities/",
                        "*://plug.dj/about",
                        "*://plug.dj/terms",
                        "*://plug.dj/privacy" ]
        },
        "web_accessible_resources": [
		        "images/iplug-button.png",
                "javascripts/iPlug.js",
                "javascripts/iPlugApp.js",
				"javascripts/iPlugBG.js",
				"javascripts/sketch.min.js",
                "javascripts/socket.io-1.2.0.js",
                "javascripts/iframe_api.min.js",
                "images/chosen/chosen-sprite.png",
                "images/chosen/chosen-sprite@2x.png",
                "images/Plug/dev.png",
                "images/Plug/icon256.png",
                "images/Plug/plug.png",
                "images/loading.png",
				"images/noise-1.png"
        ],
        "content_scripts": [
                {
                        "matches": [
                                "*://plug.dj/*"
                        ],
                        "exclude_matches": [
                                "*://plug.dj/communities/",
                                "*://plug.dj/about",
                                "*://plug.dj/terms",
                                "*://plug.dj/privacy"
                        ],
                        "js": [
                                "javascripts/iPlug.js"
                        ],
                        "css": [
                                "css/iPlug.css"
                        ],
                        "run_at": "document_end"
                }
        ],
		"background": {
				"scripts": ["javascripts/iPlugBG.js"]
		}
}
