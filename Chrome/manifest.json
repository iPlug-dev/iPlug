{
        "name": "iPlug BETA",
        "short_name": "iPlug",
        "author": "L0laapk3 (& CookieMichal)",
        "version": "0.2.5.3",
        "manifest_version": 2,
        "description": "The most sexy plug.dj extension!",
        "icons": {
                "256": "images/Chrome/icon256.png"
        },
        "permissions": [
                "*://*.plug.dj/*",
                "storage",
                "notifications",
                "contextMenus"
        ],
        "optional_permissions": [
                "http://*/*",
                "https://*/*"
        ],
        "externally_connectable": {
                "matches": [
                        "*://plug.dj/*"
                ], "exclude_matches": [
                        "*://plug.dj/communities/",
                        "*://plug.dj/about",
                        "*://plug.dj/terms",
                        "*://plug.dj/privacy" ]
        },
        "web_accessible_resources": [
		        "images/iplug-button.png",
				"javascripts/iplug/*.js"
                "javascripts/*.js",
                "images/chosen/chosen-sprite.png",
                "images/chosen/chosen-sprite@2x.png",
                "images/Plug/dev.png",
                "images/Plug/icon256.png",
                "images/Plug/plug.png",
                "images/loading.png",
				"images/noise-1.png",
                "images/fullscreenplayer.png",
                "images/twitchlogo.png",
                "images/downloadgrey.png",
                "images/downloadwhite.png",
                "images/spinnergrey.png",
                "images/spinnerwhite.png",
                "images/play.png"
        ],
        "content_scripts": [
                {
                        "matches": [
                                "*://plug.dj/*"
                        ],
                        "exclude_matches": [
                                "*://plug.dj/communities/",
                                "*://plug.dj/about",
                                "*://plug.dj/terms",
                                "*://plug.dj/privacy"
                        ],
                        "js": [
                                "javascripts/iPlug.js"
                        ],
                        "css": [
                                "css/iPlug.css"
                        ],
                        "run_at": "document_end"
                }
        ],
		"background": {
				"scripts": ["javascripts/iPlugBG.js"]
		}
}
