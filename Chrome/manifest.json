{
        "name": "iPlug",
        "version": "0.0.1",
        "manifest_version": 2,
        "description": "A free addon for http://plug.dj/ that allows autowoot, autojoin and many other things!",
        "icons": {
                "16": "images/icon16.png",
                "64": "images/icon64.png",
                "128": "images/icon128.png"
        },
        "permissions": [
                "*://*.plug.dj/*",
                "storage",
                "notifications",
                "contextMenus"
        ],
        "optional_permissions": [
                "http://*/*",
                "https://*/*"
        ],
        "web_accessible_resources": [
                "javascripts/iPlug.js",
                "images/icon.png"
        ],
        "content_scripts": [
                {
                        "matches": [
                                "*://plug.dj/*"
                        ],
                        "exclude_matches": [
                                "*://plug.dj/communities/",
                                "*://plug.dj/about",
                                "*://plug.dj/terms",
                                "*://plug.dj/privacy"
                        ],
                        "js": [
                                "javascripts/jquery-2.0.3.js",
                                "javascripts/jquery-ui-1.10.3.custom.js",
                                "javascripts/iPlug.js"
                        ],
                        "css": [
                                "css/iPlug.css"
                        ],
                        "run_at": "document_end"
                }
        ],
        "content_security_policy": "script-src 'self' https://www.google-analytics.com https://www.google.com https://stats.g.doubleclick.net; object-src 'self'; default-src 'self';"
}
