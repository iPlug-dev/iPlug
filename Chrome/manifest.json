{
        "name": "iPlug",
        "short_name": "iPlug",
        "author": "CookieMichal & L0laapk3",
        "version": "0.1.0",
        "manifest_version": 2,
        "description": "A free addon for http://plug.dj/ that allows autowoot, autojoin and many other things!",
        "icons": {
                "256": "images/Chrome/icon256.png"
        },
        "permissions": [
                "*://*.plug.dj/*",
                "storage",
                "notifications",
                "contextMenus"
        ],
        "optional_permissions": [
                "http://*/*",
                "https://*/*"
        ],
        "web_accessible_resources": [
                "javascripts/iPlug.js",
                "javascripts/iPlugApp.js",
                "images/Plug/icon256.png",
                "images/Plug/plug.png"
        ],
        "content_scripts": [
                {
                        "matches": [
                                "*://plug.dj/*"
                        ],
                        "exclude_matches": [
                                "*://plug.dj/communities/",
                                "*://plug.dj/about",
                                "*://plug.dj/terms",
                                "*://plug.dj/privacy"
                        ],
                        "js": [
                                "javascripts/jquery-2.0.3.js",
                                "javascripts/jquery-ui-1.10.3.custom.js",
                                "javascripts/socket.io.js",
                                "javascripts/bililiteRange.js",
                                "javascripts/jquery.simulate.js",
                                "javascripts/jquery.simulate.ext.js",
                                "javascripts/jquery.simulate.drag-n-drop.js",
                                "javascripts/jquery.simulate.key-sequence.js",
                                "javascripts/jquery.simulate.key-combo.js",
                                "javascripts/iPlug.js"
                        ],
                        "css": [
                                "css/iPlug.css"
                        ],
                        "run_at": "document_end"
                }
        ]
}
